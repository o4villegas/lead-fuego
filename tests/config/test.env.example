# LeadFuego Integration Test Environment Variables
# Copy this file to test.env and fill in your actual credentials

# Meta Marketing API (Required)
META_ACCESS_TOKEN=your_meta_access_token_here
META_AD_ACCOUNT_ID=act_your_ad_account_id_here
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here

# OpenAI API (Required)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_organization_id_here

# Twilio API (Required)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1your_twilio_phone_number

# SendGrid API (Optional for email tests)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Cloudflare (For D1 testing)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
D1_DATABASE_ID=your_test_d1_database_id_here

# Test Configuration
TEST_MODE=integration
TEST_PHONE_NUMBER=+1your_test_phone_number_for_sms
TEST_EMAIL=your_test_email@example.com
MAX_COST_LIMIT_USD=50.00
WEBHOOK_TEST_URL=https://your-ngrok-url.ngrok.io/webhook/test

# Debugging
DEBUG_API_CALLS=true
SAVE_API_RESPONSES=true
LOG_LEVEL=debug